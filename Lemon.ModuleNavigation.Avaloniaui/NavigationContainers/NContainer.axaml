<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lm="clr-namespace:Lemon.ModuleNavigation;assembly=Lemon.ModuleNavigation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Name="NContainerRoot"
             x:Class="Lemon.ModuleNavigation.Avaloniaui.NavigationContainers.NContainer">
    <ContentControl Content="{Binding #NContainerRoot.NavigationContext.CurrentModule,Mode=TwoWay}">
        <ContentControl.ContentTemplate>
            <DataTemplate>
                <ContentControl ContentTemplate="{Binding ViewTemplate}"/>
            </DataTemplate>
        </ContentControl.ContentTemplate>
    </ContentControl>
</UserControl>